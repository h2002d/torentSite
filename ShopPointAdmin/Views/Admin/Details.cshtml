@model CarProject.Models.Post
@{
    ViewBag.Title = "Details";
}

<h2>Create</h2>
@using (@Html.BeginForm("Create", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(m => m.id);
                              @Html.HiddenFor(m => m.SecondaryImageId);
                                                        @Html.HiddenFor(m => m.DateAdded);
    <p>Անվանումը</p>
    @Html.TextBoxFor(m => m.Title);
    <p>Բնութագիր</p>
    @Html.TextAreaFor(m => m.PostContent);
    <p>Արժեքը</p>
    @Html.TextAreaFor(m => m.Price);

    <p>Կատեգորիա</p>
    @Html.TextBoxFor(m => m.CategoryId);
    <p>Նկարը</p>
    @Html.TextBoxFor(m => m.GeneralImage);
    <input type="submit" name="SaveButton" value="Save" />
}
